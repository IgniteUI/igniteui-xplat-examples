{
  "descriptions": {
    "editor": {
      "type": "PropertyEditorPanel",
      "name": "PropertyEditor",
      "componentRendererRef": "renderer",
      "targetRef": "grid",
      "descriptionType": "WebGrid",
      "isHorizontal": true,
      "isWrappingEnabled": true,
      "properties": [
        {
          "type": "PropertyEditorPropertyDescription",
          "propertyPath": "SortingOptions",
          "name": "SortingOptionsEditor"          
        },
        {
          "type": "PropertyEditorPropertyDescription",
          "valueType": "Button",
          "primitiveValue": "Clear Sorting",
          "buttonClickedRef": "WebGridSortingSampleClearSortButton"
        },
        {
          "type": "PropertyEditorPropertyDescription",
          "valueType": "Button",
          "primitiveValue": "Clear Grouped Columns",
          "buttonClickedRef": "WebGridSortingSampleClearGrouping"
        }
      ]
    },
    "content": {
      "type": "WebGrid",
      "dataRef": "ProductSales",
      "name": "grid",
      "autoGenerate": false,
      "sortingExpressions": [
        {
          "type": "WebSortingExpression",
          "fieldName": "CategoryName",
          "dir": "Asc",
          "ignoreCase": true
        }
      ],
      "columns": [
        {
          "type": "WebGridColumn",
          "field": "OrderID",
          "header": "Order ID",
          "groupable": true,
          "sortable": true
        },
        {
          "type": "WebGridColumn",
          "field": "CategoryName",
          "header": "Category Name",
          "dataType": "String1",
          "groupable": true,
          "sortable": true
        },
        {
          "type": "WebGridColumn",
          "field": "CompanyName",
          "header": "Company Name",
          "dataType": "String1",
          "groupable": true,
          "sortable": true
        },
        {
          "type": "WebGridColumn",
          "field": "ShipCountry",
          "header": "Ship Country",
          "dataType": "String1",
          "groupable": true,
          "sortable": true
        },
        {
          "type": "WebGridColumn",
          "field": "SaleAmount",
          "header": "Sale Amount",
          "dataType": "Currency",
          "groupable": true,
          "sortable": true,
          "pipeArgs": {
            "currencyCode": "USD",
            "type": "WebColumnPipeArgs",
            "digitsInfo": "1.2-2"
          }
        },
        {
          "type": "WebGridColumn",
          "field": "ShippedDate",
          "header": "Shipped Date",
          "dataType": "Date",
          "sortable": true
        }
      ]
    }
  },
  "modules": [
    "withDescriptions",
    "layouts/PropertyEditorPanelModule",
    "grids/WebGridModule"
  ]
}